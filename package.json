  "description": "YOUR PROJECT DESCRIPTION HERE",
  "author": "YOUR NAME",
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-transform-runtime": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/runtime-corejs3": "7.5.5",
    "autoprefixer": "9.6.1",
    "browser-sync": "2.26.7",
    "core-js": "3.2.1",
    "custom-event-polyfill": "1.0.7",
    "element-closest": "^3.0.0",
    "neuekit": "^1.0.0-alpha.13",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "6.0.0",
    "postcss-cli": "6.1.3",
    "promise-polyfill": "8.1.3",
    "rollup": "1.19.4",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.1",
    "smoothscroll-polyfill": "^0.4.2",
    "stickyfilljs": "^2.1.0",
    "svg4everybody": "^2.1.9",
    "whatwg-fetch": "^3.0.0"
  },
  "scripts": {
    "serve": "browser-sync start --server --no-notify --files '.' --ignore 'node_modules'",
    "scss": "node-sass --output-style compressed -x -r -o ./styles ./styles",
    "autoprefixer": "postcss --use autoprefixer --replace ./styles/style.css --no-map",
    "build:css": "run-s 'scss' 'autoprefixer'",
    "build:js": "rollup --config",
    "build": "run-s 'build:css' 'build:js'",
    "watch:css": "onchange './styles/**/*.scss' -- npm run build:css",
    "watch:js": "rollup --config --watch",
    "watch": "run-p 'serve' 'watch:css' 'watch:js'",
    "start": "npm run watch"
  }
}
